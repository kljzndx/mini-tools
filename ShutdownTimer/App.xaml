 <Application x:Class="ShutdownTimer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ShutdownTimer.ViewModels"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             StartupUri="./Views/MainWindow.xaml"
             ShutdownMode="OnExplicitShutdown">
    
    <Application.Resources>
        <vm:ViewModelLocator x:Key="Locator"/>

        <tb:TaskbarIcon x:Key="TaskIcon" DataContext="{Binding Source={StaticResource Locator}, Path=TaskIcon}"
                        IconSource="/icon.ico" ToolTipText="{Binding ToolTip}"  DoubleClickCommand="{Binding ShowMainWindowCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="停止定时器" Command="{Binding StopTimerCommand}"/>
                    <MenuItem Header="显示主界面" Command="{Binding ShowMainWindowCommand}"/>
                        
                    <MenuItem Header="退出" Command="{Binding ExitCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>
